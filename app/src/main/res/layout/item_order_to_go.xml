<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOrderToGo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4sp"
    android:layout_marginBottom="8dp"
    android:backgroundTintMode="add"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7sp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRemovePedidoToGo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:enabled="true"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="5dp"
            android:visibility="visible"
            app:backgroundTint="#FFFFFF"

            app:elevation="5dp"
            app:icon="@drawable/ic_baseline_delete_forever_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="48dp"
            app:iconTint="@color/purple_500"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/ContainerDeTodoMenosIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/containerNombreClienteYFlechita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nombreClienteOrderToGoItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEPITO"
                    android:textAllCaps="true"
                    android:textColor="#595959"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:text="Iniciado:"/>
                <TextView
                    android:id="@+id/horaIniciadoItemOrderToGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:50PM"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerMensajePedidoSinItemsOrderToGo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5sp"
                    android:text="Pedido sin items"
                    android:textAllCaps="true"
                    android:textColor="#F44336"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>